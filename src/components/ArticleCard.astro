---
import CoverImage from './CoverImage.astro';
import ScoreBadge from './ScoreBadge.astro';

interface GameInfo {
  title: string;
  genre?: string[];
  platforms?: string[];
  releaseDate?: string;
  developer?: string;
  publisher?: string;
  developerCountry?: string;
  metascore?: number | null;
  userScore?: number | null;
  coverImage?: string;
  screenshots?: string[];
}

interface Props {
  href: string;
  title: string;
  category: 'newRelease' | 'indie' | 'feature' | 'classic';
  summary: string;
  coverImage?: string;
  featureImage?: string; // 特集記事用のAI生成画像
  game?: GameInfo;
}

const { href, title, category, summary, coverImage, featureImage, game } = Astro.props;

const categoryLabels: Record<string, string> = {
  newRelease: '新作紹介',
  indie: 'インディーゲーム',
  feature: '特集',
  classic: '名作深掘り',
};

const categoryColors: Record<string, string> = {
  newRelease: '#4fc3f7',
  indie: '#81c784',
  feature: '#ffb74d',
  classic: '#ba68c8',
};
---

<a
  href={href}
  class={`article-card ${category}`}
  style={`--category-color: ${categoryColors[category]}`}
>
  <CoverImage
    src={coverImage || featureImage || game?.coverImage}
    alt={title}
    aspectRatio="16/9"
    class="card-image"
    category={category}
  />
  <div class="card-content">
    <span class="card-category">
      {categoryLabels[category]}
    </span>
    <h2 class="card-title">{title}</h2>
    <p class="card-summary">{summary}</p>
    {
      game && (
        <div class="card-game-info">
          <div class="game-meta-left">
            {game.platforms && game.platforms.length > 0 && (
              <span class="platforms">{game.platforms.join(' / ')}</span>
            )}
            {game.developer && (
              <span class="developer">
                {game.developer}
                {game.developerCountry && <span class="country">（{game.developerCountry}）</span>}
              </span>
            )}
          </div>
          <div class="game-meta-right">
            {game.metascore && (
              <ScoreBadge score={game.metascore} size="sm" />
            )}
          </div>
        </div>
      )
    }
  </div>
</a>

<style>
  .article-card {
    display: block;
    background: var(--color-surface);
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-md);
    transition:
      transform 0.3s cubic-bezier(0.4, 0, 0.2, 1),
      box-shadow 0.3s cubic-bezier(0.4, 0, 0.2, 1),
      border-color 0.3s ease;
    cursor: pointer;
    text-decoration: none;
    color: inherit;
    border: 1px solid transparent;
  }

  .article-card:hover {
    transform: translateY(-6px);
    box-shadow:
      var(--shadow-lg),
      0 0 30px rgba(233, 69, 96, 0.15);
    border-color: rgba(233, 69, 96, 0.3);
  }

  .article-card:active {
    transform: translateY(-2px);
    transition-duration: 0.1s;
  }

  .article-card :global(.card-image) {
    border-radius: 0;
  }

  .card-content {
    padding: var(--spacing-lg);
  }

  .card-category {
    display: inline-block;
    background: var(--category-color);
    color: var(--color-background);
    padding: var(--spacing-xs) var(--spacing-sm);
    border-radius: var(--radius-sm);
    font-size: 0.7rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: var(--spacing-sm);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .article-card:hover .card-category {
    transform: scale(1.05);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
  }

  .card-title {
    font-size: 1.25rem;
    margin-bottom: var(--spacing-sm);
    line-height: 1.3;
    transition: color 0.2s ease;
  }

  .article-card:hover .card-title {
    color: var(--color-primary);
  }

  .card-summary {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    margin-bottom: var(--spacing-md);
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .card-game-info {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: var(--spacing-sm);
    border-top: 1px solid var(--color-border);
    gap: var(--spacing-sm);
  }

  .game-meta-left {
    display: flex;
    flex-direction: column;
    gap: 2px;
    flex: 1;
    min-width: 0;
  }

  .game-meta-right {
    flex-shrink: 0;
  }

  .platforms {
    font-size: 0.75rem;
    color: var(--color-text-muted);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .developer {
    font-size: 0.7rem;
    color: var(--color-text-muted);
    opacity: 0.8;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .country {
    opacity: 0.7;
  }
</style>
