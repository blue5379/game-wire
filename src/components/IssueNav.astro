---
interface NavItem {
  href: string;
  title: string;
}

interface Props {
  prev?: NavItem;
  next?: NavItem;
  home?: NavItem;
}

const { prev, next, home } = Astro.props;
---

<nav class="issue-nav">
  <div class="nav-item nav-prev">
    {
      prev && (
        <a href={prev.href} class="nav-link">
          <span class="nav-direction">&larr; 前の記事</span>
          <span class="nav-title">{prev.title}</span>
        </a>
      )
    }
  </div>

  <div class="nav-item nav-home">
    {
      home && (
        <a href={home.href} class="nav-link nav-link--home">
          <span class="nav-title">{home.title}</span>
        </a>
      )
    }
  </div>

  <div class="nav-item nav-next">
    {
      next && (
        <a href={next.href} class="nav-link">
          <span class="nav-direction">次の記事 &rarr;</span>
          <span class="nav-title">{next.title}</span>
        </a>
      )
    }
  </div>
</nav>

<style>
  .issue-nav {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    gap: var(--spacing-md);
    padding: var(--spacing-xl) 0;
    margin-top: var(--spacing-2xl);
    border-top: 1px solid var(--color-border);
  }

  .nav-item {
    display: flex;
  }

  .nav-prev {
    justify-content: flex-start;
  }

  .nav-home {
    justify-content: center;
  }

  .nav-next {
    justify-content: flex-end;
  }

  .nav-link {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xs);
    padding: var(--spacing-md);
    background: var(--color-surface);
    border-radius: var(--radius-md);
    text-decoration: none;
    color: inherit;
    max-width: 250px;
    transition:
      background-color 0.2s ease,
      transform 0.2s ease;
  }

  .nav-link:hover {
    background: var(--color-accent);
    transform: translateY(-2px);
  }

  .nav-link--home {
    padding: var(--spacing-md) var(--spacing-lg);
  }

  .nav-direction {
    font-size: 0.75rem;
    color: var(--color-primary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .nav-title {
    font-size: 0.875rem;
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .nav-prev .nav-link {
    text-align: left;
  }

  .nav-next .nav-link {
    text-align: right;
  }

  .nav-home .nav-title {
    font-weight: 500;
    color: var(--color-primary);
  }

  @media (max-width: 768px) {
    .issue-nav {
      grid-template-columns: 1fr 1fr;
      grid-template-rows: auto auto;
    }

    .nav-home {
      grid-column: 1 / -1;
      order: -1;
      justify-content: center;
    }

    .nav-link {
      max-width: none;
    }

    .nav-prev .nav-link,
    .nav-next .nav-link {
      width: 100%;
    }
  }
</style>
