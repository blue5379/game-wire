---
interface Props {
  screenshots: string[];
  gameTitle: string;
  maxDisplay?: number;
}

const { screenshots, gameTitle, maxDisplay = 10 } = Astro.props;

// 表示するスクリーンショットを制限
const displayScreenshots = screenshots.slice(0, maxDisplay);
---

{displayScreenshots.length > 0 && (
  <section class="screenshot-gallery">
    <h3 class="gallery-title">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <rect x="3" y="3" width="18" height="18" rx="2" ry="2" />
        <circle cx="8.5" cy="8.5" r="1.5" />
        <polyline points="21 15 16 10 5 21" />
      </svg>
      スクリーンショット
    </h3>
    <div class="gallery-container">
      <div class="gallery-track">
        {displayScreenshots.map((src, index) => (
          <div class="gallery-item">
            <img
              src={src}
              alt={`${gameTitle} スクリーンショット ${index + 1}`}
              loading="lazy"
            />
          </div>
        ))}
      </div>
    </div>
    <div class="gallery-hint">
      <span class="hint-icon">←</span>
      <span>横にスクロールできます</span>
      <span class="hint-icon">→</span>
    </div>
  </section>
)}

<style>
  .screenshot-gallery {
    margin: var(--spacing-xl) 0;
  }

  .gallery-title {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    font-size: 1.25rem;
    color: var(--color-text);
    margin-bottom: var(--spacing-md);
  }

  .gallery-title svg {
    width: 24px;
    height: 24px;
    color: var(--color-primary);
  }

  .gallery-container {
    position: relative;
    overflow: hidden;
    border-radius: var(--radius-lg);
    background: var(--color-accent);
  }

  .gallery-track {
    display: flex;
    gap: var(--spacing-md);
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    scroll-behavior: smooth;
    padding: var(--spacing-md);
    -webkit-overflow-scrolling: touch;
    scrollbar-width: thin;
    scrollbar-color: var(--color-primary) var(--color-surface);
  }

  .gallery-track::-webkit-scrollbar {
    height: 8px;
  }

  .gallery-track::-webkit-scrollbar-track {
    background: var(--color-surface);
    border-radius: 4px;
  }

  .gallery-track::-webkit-scrollbar-thumb {
    background: var(--color-primary);
    border-radius: 4px;
  }

  .gallery-track::-webkit-scrollbar-thumb:hover {
    background: var(--color-text);
  }

  .gallery-item {
    flex-shrink: 0;
    scroll-snap-align: start;
    border-radius: var(--radius-md);
    overflow: hidden;
    box-shadow: var(--shadow-md);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .gallery-item:hover {
    transform: scale(1.02);
    box-shadow: var(--shadow-lg), 0 0 20px rgba(233, 69, 96, 0.2);
  }

  .gallery-item img {
    display: block;
    height: 200px;
    width: auto;
    object-fit: cover;
  }

  .gallery-hint {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--spacing-sm);
    padding: var(--spacing-sm);
    color: var(--color-text-muted);
    font-size: 0.75rem;
  }

  .hint-icon {
    animation: bounce 2s infinite;
  }

  .hint-icon:first-child {
    animation-direction: alternate;
  }

  .hint-icon:last-child {
    animation-direction: alternate-reverse;
  }

  @keyframes bounce {
    0%, 100% {
      transform: translateX(0);
    }
    50% {
      transform: translateX(4px);
    }
  }

  /* タブレット以上では大きく表示 */
  @media (min-width: 768px) {
    .gallery-item img {
      height: 280px;
    }
  }

  /* 大画面ではさらに大きく */
  @media (min-width: 1024px) {
    .gallery-item img {
      height: 320px;
    }
  }
</style>
